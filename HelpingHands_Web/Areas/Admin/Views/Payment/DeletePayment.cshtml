@model PaymentDTO


<form asp-action="DeletePayment">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Payment</h1>
        <hr />

        <input hidden asp-for="Id" />
        <div class="row">
            <div class="col-2">
                <label asp-for="PaymentName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="PaymentName" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="IsActive" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="IsActive" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexPayment" asp-controller="Payment" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

