@model ServiceCreateVM

<form asp-action="CreateService">
    <br />
    <div class="container border p-3">
        <h4 class="text-primary">Create Service</h4>
        <hr />

        <div class="row">


            <div class="col-2">
                <label asp-for="Service.ServiceName" class="control-label pt-2" style="font-size:20px;">Service Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Service.ServiceName" class="form-control" />
                <span asp-validation-for="Service.ServiceName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Service.FirstCategoryId" class="control-label pt-2" style="font-size:20px;">First Category Name</label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="Service.FirstCategoryId" class="form-select" asp-items="@Model.FirstCategoryList">
                    <option disabled selected>--Select FirstCategory--</option>
                </select>
                <span asp-validation-for="Service.FirstCategoryId" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="Service.IsActive" class="control-label pt-2" style="font-size:20px;">Is Active</label>
            </div>
            <div class="col-10 pb-3">
                <input type="checkbox" asp-for="Service.IsActive" value="true" checked />
                <span asp-validation-for="Service.IsActive" class="text-danger"></span>
            </div>

            <div class="row offset-2">
                <div class="col-5">
                    <input type="submit" value="Create" class="btn btn-primary form-control" />
                </div>
                <div class="col-5">
                    <a asp-action="IndexService" asp-controller="Service" class="btn-primary btn form-control ">Back to List</a>
                </div>

            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


