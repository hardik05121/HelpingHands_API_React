@model ApplicationRoleDTO


<form asp-action="UpdateApplicationRole">
    <br />
    <div class="container border p-3">
        <h4 class="text-primary">Update Role</h4>
        <hr />

        <input hidden asp-for="Id" />
        <div class="row">
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" required  />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="row offset-2">
                <div class="col-5">
                    <input type="submit" value="Update" class="btn btn-success form-control" />
                </div>
                <div class="col-5">
                <a asp-action="IndexApplicationRole" asp-controller="ApplicationRole" class="btn-primary btn form-control ">Back to List</a>
            </div>
           
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
