@model AmenityDTO


<form asp-action="DeleteAmenity">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Amenity</h1>
        <hr />

        <input hidden asp-for="Id" />
        <div class="row">
            <div class="col-2">
                <label asp-for="AmenityName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="AmenityName" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="IsActive" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="IsActive" type="checkbox" value="true" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexAmenity" asp-controller="Amenity" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

