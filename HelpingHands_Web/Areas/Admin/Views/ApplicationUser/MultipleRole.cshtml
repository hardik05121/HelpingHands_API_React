@model UserVM

<form asp-action="MultipleRole">
    <br />
    <div class="container border p-3">

        <div class="container-fluid d-flex">
            <div class="col-10">
                <h4 class="text-primary"> Add Multiple Role For:- @Model.ApplicationUser.UserName</h4>
            </div>
        </div>
        <hr />
        
        <input hidden asp-for="@Model.ApplicationUser.Id" />

        <div class="row">

            <h4 class="mb-3">Roles</h4>

            <div class="col-12">
                <div class="form-check">
                    <input type="checkbox" id="selectAllCheckbox" class="form-check-input" />
                    <label class="form-check-label" for="selectAllCheckbox">Select All</label>
                </div>
            </div>

            <div class="container-fluid ">
                @for (int index = 0; index < @Model.ApplicationRoleList.Count(); index++)
                {
                    <div class="col-2 m-2">
                        <input type="checkbox" asp-for="@Model.ApplicationRoleList[index].IsChecked" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model.ApplicationRoleList[index].IsChecked">@Model.ApplicationRoleList[index].Name</label>
                        <input type="hidden" asp-for="@Model.ApplicationRoleList[index].Id" />
                        <input type="hidden" asp-for="@Model.ApplicationRoleList[index].Name" />
                        <br />
                    </div>
                }
            </div>
        </div>
        <div class="row offset-2">
            <div class="col-5">
                <input type="submit" value="Save" class="btn btn-primary form-control" />
            </div>
            <div class="col-5 ">
                <a asp-controller="ApplicationUser" asp-action="IndexApplicationUser" class="btn-primary btn form-control ">Back to List</a>
            </div>
        </div>
    </div>
</form>




@section Scripts {

    <script>
        // JavaScript function to handle "Select All" checkbox
        $("#selectAllCheckbox").click(function () {
            var isChecked = $(this).is(":checked");
            $("input[type=checkbox]").prop("checked", isChecked);
        });
    </script>

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}