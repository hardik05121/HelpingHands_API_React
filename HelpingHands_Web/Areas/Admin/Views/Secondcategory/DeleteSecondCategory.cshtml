@model SecondCategoryDeleteVM

<form asp-action="DeleteSecondCategory">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete SecondCategory</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="SecondCategory.Id" hidden />

            <div class="col-2">
                <label asp-for="SecondCategory.SecondCategoryName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="SecondCategory.SecondCategoryName" class="form-control" />
                <span asp-validation-for="SecondCategory.SecondCategoryName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="SecondCategory.FirstCategoryId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="SecondCategory.FirstCategoryId" class="form-select" asp-items="@Model.FirstCategoryList">
                    <option disabled selected>--Select FirstCategory--</option>
                </select>
                <span asp-validation-for="SecondCategory.FirstCategoryId" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="SecondCategory.IsActive" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input type="checkbox" asp-for="SecondCategory.IsActive" value="true" checked />
                <span asp-validation-for="SecondCategory.IsActive" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexSecondCategory" asp-controller="SecondCategory" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


