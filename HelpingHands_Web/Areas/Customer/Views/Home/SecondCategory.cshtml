@* Home Page *@

@if (Model.SecondCategoryList != null)
{
    <section>
        <div class="container m-3">
            <div class="row ">
                @if (Model.SecondCategoryList != null)
                {
                    @foreach (var image in Model.SecondCategoryList)
                    {
                        <div class="col-md-2 col-sm-4 m-3 justify-content-evenly">
                            <div class="text-center">
                                <a class="text-decoration-none" href="@Url.Action("ThirdCategory", "Home", new { firstCategoryId = image.FirstCategoryId , secondCategoryId = image.Id})">
                                    <img src="@image.SecondCategoryImage" alt="@image.SecondCategoryName" style="border-radius: 5px; border: 1px solid #bbb9b9" height="100px" width="100px" />
                                    <h6 class="text-dark">@image.SecondCategoryName</h6>
                                </a>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </section>
}
else if (Model.CompanyList != null)
{
    <h1>Company Available</h1>
}
else
{
    <h1> No Companies Available</h1>
}